<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Registrations - Activity System</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #333;
            background-color: #f5f5f5;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem;
            border-radius: 10px;
            margin-bottom: 2rem;
            text-align: center;
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }

        .subtitle {
            font-size: 1.2rem;
            opacity: 0.9;
        }

        .back-btn {
            display: inline-block;
            margin-top: 1rem;
            color: white;
            text-decoration: none;
            padding: 0.5rem 1rem;
            border: 1px solid white;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .back-btn:hover {
            background: white;
            color: #667eea;
        }

        .status-filter {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
            overflow-x: auto;
            padding: 10px 0;
        }
        
        .status-btn {
            padding: 8px 16px;
            border: 1px solid #ddd;
            border-radius: 20px;
            background: white;
            cursor: pointer;
            white-space: nowrap;
        }
        
        .status-btn.active {
            background: #667eea;
            color: white;
            border-color: #667eea;
        }
        
        .registrations-container {
            background: white;
            border-radius: 10px;
            padding: 1.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 2rem;
        }

        .registration-card {
            background: white;
            border: 1px solid #e0e0e0;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 15px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            display: flex;
            align-items: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .registration-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.15);
        }
        
        .registration-cover {
            width: 80px;
            height: 80px;
            border-radius: 8px;
            background: #f0f0f0;
            margin-right: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #999;
            font-size: 12px;
            flex-shrink: 0;
        }
        
        .registration-info {
            flex: 1;
        }
        
        .registration-title {
            font-weight: bold;
            margin-bottom: 5px;
            font-size: 1.1rem;
        }
        
        .registration-meta {
            color: #666;
            font-size: 14px;
            margin-bottom: 5px;
        }
        
        .registration-status {
            display: inline-block;
            padding: 3px 8px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: bold;
        }
        
        .status-pending { background: #fff3cd; color: #856404; }
        .status-approved { background: #d4edda; color: #155724; }
        .status-rejected { background: #f8d7da; color: #721c24; }
        .status-cancelled { background: #e2e3e5; color: #383d41; }
        
        .registration-actions {
            display: flex;
            gap: 10px;
        }
        
        /* 加载更多样式 */
        .load-more {
            text-align: center;
            padding: 15px;
            color: #667eea;
            cursor: pointer;
            font-weight: bold;
        }
        
        /* 下拉刷新样式 */
        .pull-to-refresh {
            text-align: center;
            padding: 10px;
            color: #666;
            margin-bottom: 10px;
        }

        .loading {
            text-align: center;
            padding: 20px;
            color: #666;
        }

        .no-registrations {
            text-align: center;
            padding: 40px;
            color: #666;
            font-size: 1.1rem;
        }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            align-items: center;
            justify-content: center;
        }

        .modal-content {
            background: white;
            padding: 2rem;
            border-radius: 10px;
            width: 90%;
            max-width: 600px;
            max-height: 90vh;
            overflow-y: auto;
        }

        .modal h2 {
            margin-bottom: 1rem;
            color: #333;
            border-bottom: 1px solid #eee;
            padding-bottom: 0.5rem;
        }

        .detail-section {
            margin-bottom: 1.5rem;
            padding: 1rem;
            background: #f8f9fa;
            border-radius: 5px;
        }

        .detail-section h3 {
            margin-bottom: 0.5rem;
            color: #667eea;
        }

        .modal-actions {
            display: flex;
            gap: 10px;
            justify-content: flex-end;
            margin-top: 1.5rem;
            padding-top: 1rem;
            border-top: 1px solid #eee;
        }

        .btn {
            display: inline-block;
            padding: 0.8rem 1.5rem;
            background: #667eea;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            font-size: 1rem;
            transition: background 0.3s ease;
        }

        .btn:hover {
            background: #5a6fd8;
        }

        .btn-success {
            background: #28a745;
        }

        .btn-success:hover {
            background: #218838;
        }

        .btn-danger {
            background: #dc3545;
        }

        .btn-danger:hover {
            background: #c82333;
        }

        .btn-secondary {
            background: #6c757d;
        }

        .btn-secondary:hover {
            background: #5a6268;
        }

        .btn-primary {
            background: #007bff;
        }

        .btn-primary:hover {
            background: #0069d9;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .form-group input, .form-group select, .form-group textarea {
            width: 100%;
            padding: 0.8rem;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 1rem;
        }

        .alert {
            padding: 1rem;
            border-radius: 5px;
            margin-bottom: 1rem;
        }

        .alert-success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .alert-danger {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .footer {
            text-align: center;
            margin-top: 2rem;
            padding: 1rem;
            color: #666;
            border-top: 1px solid #ddd;
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>My Registrations</h1>
            <p class="subtitle">View and manage your activity registrations</p>
            <a href="/" class="back-btn">← Back to Home</a>
        </header>

        <div id="alert-container"></div>

        <div class="status-filter">
            <div class="status-btn active" data-status="all">All</div>
            <div class="status-btn" data-status="pending">Pending</div>
            <div class="status-btn" data-status="approved">Approved</div>
            <div class="status-btn" data-status="rejected">Rejected</div>
            <div class="status-btn" data-status="history">History</div>
        </div>

        <div class="registrations-container">
            <div class="pull-to-refresh">Pull down to refresh</div>
            <div id="registrations-list">
                <!-- 报名列表将通过JS动态加载 -->
            </div>
            <div class="load-more" id="load-more">Load More</div>
        </div>

        <!-- 报名详情模态框 -->
        <div class="modal" id="detail-modal">
            <div class="modal-content">
                <h2>Registration Details</h2>
                <div id="registration-detail-content">
                    <!-- 详情内容将通过JS动态加载 -->
                </div>
                <div class="modal-actions">
                    <button class="btn btn-secondary" onclick="closeDetailModal()">Close</button>
                    <button class="btn btn-danger" id="cancel-btn" style="display: none;">Cancel Registration</button>
                    <button class="btn btn-success" id="reminder-btn" style="display: none;">Set Reminder</button>
                    <button class="btn btn-primary" id="checkin-btn" style="display: none;">Check In</button>
                </div>
            </div>
        </div>

        <!-- 提醒设置模态框 -->
        <div class="modal" id="reminder-modal">
            <div class="modal-content">
                <h2>Activity Reminder</h2>
                <form id="reminder-form">
                    <div class="form-group">
                        <label>
                            <input type="checkbox" id="reminder-enabled"> Enable reminder
                        </label>
                    </div>
                    <div class="form-group">
                        <label for="notify-before">Notify before (hours):</label>
                        <select id="notify-before">
                            <option value="1">1 hour</option>
                            <option value="6">6 hours</option>
                            <option value="12">12 hours</option>
                            <option value="24" selected>24 hours</option>
                            <option value="48">48 hours</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Save Settings</button>
                        <button type="button" class="btn btn-secondary" onclick="closeReminderModal()">Cancel</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="footer">
            <p>Activity Registration System &copy; 2025</p>
        </div>
    </div>

    <script>
        // 全局变量
        let currentStudentId = '';
        let currentStatus = 'all';
        let currentPage = 1;
        let isLoading = false;
        let hasMore = true;

        // 初始化
        document.addEventListener('DOMContentLoaded', function() {
            // 获取学生ID（在实际应用中，这里应该从登录状态获取）
            currentStudentId = prompt('Please enter your Student ID:');
            if (!currentStudentId) {
                alert('Student ID is required to view your registrations');
                window.location.href = '/';
                return;
            }
            
            loadRegistrations();
            setupEventListeners();
        });

        // 设置事件监听器
        function setupEventListeners() {
            // 状态筛选
            document.querySelectorAll('.status-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.querySelectorAll('.status-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    
                    currentStatus = this.getAttribute('data-status');
                    currentPage = 1;
                    hasMore = true;
                    
                    loadRegistrations();
                });
            });
            
            // 加载更多
            document.getElementById('load-more').addEventListener('click', function() {
                if (!isLoading && hasMore) {
                    currentPage++;
                    loadRegistrations(true);
                }
            });
            
            // 下拉刷新（简化实现）
            let startY;
            document.querySelector('.registrations-container').addEventListener('touchstart', function(e) {
                startY = e.touches[0].pageY;
            });
            
            document.querySelector('.registrations-container').addEventListener('touchmove', function(e) {
                if (!startY) return;
                
                const currentY = e.touches[0].pageY;
                const diff = currentY - startY;
                
                if (diff > 50) { // 下拉超过50px
                    currentPage = 1;
                    loadRegistrations();
                    startY = null;
                }
            });
            
            // 提醒表单提交
            document.getElementById('reminder-form').addEventListener('submit', function(e) {
                e.preventDefault();
                saveReminderSettings();
            });
        }

        // 加载报名列表
        async function loadRegistrations(append = false) {
            if (isLoading) return;
            
            isLoading = true;
            if (!append) {
                document.getElementById('registrations-list').innerHTML = '<div class="loading">Loading...</div>';
            }
            
            try {
                const response = await fetch(`/api/user/registrations?studentId=${currentStudentId}&status=${currentStatus}&page=${currentPage}&limit=10`);
                const result = await response.json();
                
                if (result.success) {
                    displayRegistrations(result.data, append);
                    hasMore = currentPage < result.pagination.totalPages;
                    
                    if (!hasMore) {
                        document.getElementById('load-more').style.display = 'none';
                    } else {
                        document.getElementById('load-more').style.display = 'block';
                    }
                } else {
                    showAlert('Error loading registrations: ' + result.message, 'danger');
                }
            } catch (error) {
                showAlert('Error loading registrations: ' + error.message, 'danger');
            } finally {
                isLoading = false;
            }
        }

        // 显示报名列表
        function displayRegistrations(registrations, append) {
            const container = document.getElementById('registrations-list');
            
            if (!append) {
                container.innerHTML = '';
            }
            
            if (registrations.length === 0) {
                container.innerHTML = '<div class="no-registrations">No registrations found</div>';
                return;
            }
            
            registrations.forEach(reg => {
                const card = document.createElement('div');
                card.className = 'registration-card';
                card.onclick = () => openDetailModal(reg.id);
                
                card.innerHTML = `
                    <div class="registration-cover">
                        ${reg.activity.name.substring(0, 2).toUpperCase()}
                    </div>
                    <div class="registration-info">
                        <div class="registration-title">${reg.activity.name}</div>
                        <div class="registration-meta">
                            ${reg.activity.date} • ${reg.activity.time}
                        </div>
                        <div class="registration-meta">
                            ${reg.activity.location}
                        </div>
                        <span class="registration-status status-${reg.status}">${reg.status}</span>
                    </div>
                `;
                
                container.appendChild(card);
            });
        }

        // 打开详情模态框
        async function openDetailModal(registrationId) {
            try {
                const response = await fetch(`/api/registrations/${registrationId}`);
                const result = await response.json();
                
                if (result.success) {
                    displayRegistrationDetail(result.data);
                    document.getElementById('detail-modal').style.display = 'flex';
                } else {
                    showAlert('Error loading registration details: ' + result.message, 'danger');
                }
            } catch (error) {
                showAlert('Error loading registration details: ' + error.message, 'danger');
            }
        }

        // 显示报名详情
        function displayRegistrationDetail(registration) {
            const content = document.getElementById('registration-detail-content');
            const cancelBtn = document.getElementById('cancel-btn');
            const reminderBtn = document.getElementById('reminder-btn');
            const checkinBtn = document.getElementById('checkin-btn');
            
            // 构建详情HTML
            content.innerHTML = `
                <div class="detail-section">
                    <h3>Activity Information</h3>
                    <p><strong>Name:</strong> ${registration.activity.name}</p>
                    <p><strong>Date & Time:</strong> ${registration.activity.date} at ${registration.activity.time}</p>
                    <p><strong>Location:</strong> ${registration.activity.location}</p>
                    <p><strong>Description:</strong> ${registration.activity.description}</p>
                </div>
                
                <div class="detail-section">
                    <h3>Registration Information</h3>
                    <p><strong>Status:</strong> <span class="registration-status status-${registration.status}">${registration.status}</span></p>
                    <p><strong>Registration Date:</strong> ${new Date(registration.registrationDate).toLocaleDateString()}</p>
                    <p><strong>Name:</strong> ${registration.name}</p>
                    <p><strong>Student ID:</strong> ${registration.studentId}</p>
                    <p><strong>Phone:</strong> ${registration.phone}</p>
                    <p><strong>Email:</strong> ${registration.email}</p>
                </div>
                
                ${registration.checkin ? `
                <div class="detail-section">
                    <h3>Check-in Information</h3>
                    <p><strong>Status:</strong> Checked in</p>
                    <p><strong>Check-in Time:</strong> ${new Date(registration.checkin.checkinTime).toLocaleString()}</p>
                    <p><strong>Method:</strong> ${registration.checkin.method}</p>
                </div>
                ` : ''}
            `;
            
            // 显示/隐藏操作按钮
            cancelBtn.style.display = registration.status === 'pending' ? 'block' : 'none';
            reminderBtn.style.display = registration.status === 'approved' ? 'block' : 'none';
            checkinBtn.style.display = registration.status === 'approved' && !registration.checkin ? 'block' : 'none';
            
            // 设置按钮事件
            cancelBtn.onclick = () => cancelRegistration(registration.id);
            reminderBtn.onclick = () => openReminderModal(registration.id);
            checkinBtn.onclick = () => window.location.href = `/checkin?activityId=${registration.activityId}`;
        }

        // 打开提醒设置模态框
        async function openReminderModal(registrationId) {
            try {
                const response = await fetch(`/api/registrations/${registrationId}/reminder`);
                const result = await response.json();
                
                if (result.success) {
                    document.getElementById('reminder-enabled').checked = result.data.enabled;
                    document.getElementById('notify-before').value = result.data.notifyBefore;
                    
                    document.getElementById('reminder-modal').style.display = 'flex';
                    document.getElementById('reminder-form').dataset.registrationId = registrationId;
                } else {
                    showAlert('Error loading reminder settings: ' + result.message, 'danger');
                }
            } catch (error) {
                showAlert('Error loading reminder settings: ' + error.message, 'danger');
            }
        }

        // 保存提醒设置
        async function saveReminderSettings() {
            const registrationId = document.getElementById('reminder-form').dataset.registrationId;
            const enabled = document.getElementById('reminder-enabled').checked;
            const notifyBefore = document.getElementById('notify-before').value;
            
            try {
                const response = await fetch(`/api/registrations/${registrationId}/reminder`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ enabled, notifyBefore })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showAlert('Reminder settings saved successfully!', 'success');
                    closeReminderModal();
                } else {
                    showAlert('Error saving reminder settings: ' + result.message, 'danger');
                }
            } catch (error) {
                showAlert('Error saving reminder settings: ' + error.message, 'danger');
            }
        }

        // 取消报名
        async function cancelRegistration(registrationId) {
            if (!confirm('Are you sure you want to cancel this registration?')) {
                return;
            }
            
            try {
                const response = await fetch(`/api/registrations/${registrationId}`, {
                    method: 'DELETE'
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showAlert('Registration cancelled successfully!', 'success');
                    closeDetailModal();
                    loadRegistrations();
                } else {
                    showAlert('Error cancelling registration: ' + result.message, 'danger');
                }
            } catch (error) {
                showAlert('Error cancelling registration: ' + error.message, 'danger');
            }
        }

        // 关闭模态框函数
        function closeDetailModal() {
            document.getElementById('detail-modal').style.display = 'none';
        }
        
        function closeReminderModal() {
            document.getElementById('reminder-modal').style.display = 'none';
        }
        
        // 显示提示消息
        function showAlert(message, type) {
            const alert = document.createElement('div');
            alert.className = `alert alert-${type}`;
            alert.textContent = message;
            
            alertContainer.appendChild(alert);
            
            setTimeout(() => {
                alert.remove();
            }, 5000);
        }
        
        // 点击模态框外部关闭
        window.addEventListener('click', function(e) {
            if (e.target.classList.contains('modal')) {
                e.target.style.display = 'none';
            }
        });
    </script>
</body>
</html>
